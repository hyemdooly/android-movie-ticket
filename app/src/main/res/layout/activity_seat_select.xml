<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    android:id="@+id/layout_select_seat"
    tools:context=".activity.seatselect.SeatSelectActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_seat_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_price_info"
        android:paddingBottom="96dp"
        android:paddingHorizontal="34dp">

        <TextView
            android:id="@+id/text_screen"
            android:layout_width="0dp"
            android:layout_height="34dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/screen"
            android:textSize="22sp"
            android:gravity="center"
            android:background="#494949"
            android:textColor="@color/white" />

        <TableLayout
            android:id="@+id/layout_seats"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/text_screen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="56dp">

            <TableRow android:layout_weight="1">

                <TextView
                    android:id="@+id/seat_a1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:text="@string/a1"
                    android:textColor="@color/seat_rank_b"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/seat_a2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:text="@string/a2"
                    android:textColor="@color/seat_rank_b"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/seat_a3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:text="@string/a3"
                    android:textColor="@color/seat_rank_b"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/seat_a4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:text="@string/a4"
                    android:textColor="@color/seat_rank_b"
                    android:background="@color/white" />
            </TableRow>

            <TableRow android:layout_weight="1">

                <TextView
                    android:id="@+id/seat_b1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:text="@string/b1"
                    android:textColor="@color/seat_rank_b"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/seat_b2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:text="@string/b2"
                    android:textColor="@color/seat_rank_b"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/seat_b3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:text="@string/b3"
                    android:textColor="@color/seat_rank_b"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/seat_b4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:text="@string/b4"
                    android:textColor="@color/seat_rank_b"
                    android:background="@color/white" />
            </TableRow>

            <TableRow android:layout_weight="1">

                <TextView
                    android:id="@+id/seat_c1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:text="@string/c1"
                    android:textColor="@color/seat_rank_s"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/seat_c2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:text="@string/c2"
                    android:textColor="@color/seat_rank_s"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/seat_c3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:text="@string/c3"
                    android:textColor="@color/seat_rank_s"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/seat_c4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:text="@string/c4"
                    android:textColor="@color/seat_rank_s"
                    android:background="@color/white" />
            </TableRow>

            <TableRow android:layout_weight="1">

                <TextView
                    android:id="@+id/seat_d1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:text="@string/d1"
                    android:textColor="@color/seat_rank_s"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/seat_d2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:text="@string/d2"
                    android:textColor="@color/seat_rank_s"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/seat_d3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:text="@string/d3"
                    android:textColor="@color/seat_rank_s"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/seat_d4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:text="@string/d4"
                    android:textColor="@color/seat_rank_s"
                    android:background="@color/white" />
            </TableRow>

            <TableRow android:layout_weight="1">

                <TextView
                    android:id="@+id/seat_e1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:text="@string/e1"
                    android:textColor="@color/seat_rank_a"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/seat_e2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:text="@string/e2"
                    android:textColor="@color/seat_rank_a"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/seat_e3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:text="@string/e3"
                    android:textColor="@color/seat_rank_a"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/seat_e4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:text="@string/e4"
                    android:textColor="@color/seat_rank_a"
                    android:background="@color/white" />
            </TableRow>

        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_price_info"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingHorizontal="20dp"
            app:layout_constraintEnd_toStartOf="@id/btn_next">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="해리 포터와 마법사의 돌"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="0원"
                android:textSize="18sp"
                android:textColor="@color/price" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="88dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:enabled="false"
            android:background="@color/disabled_click"
            android:text="@string/okay"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>